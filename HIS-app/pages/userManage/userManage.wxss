/* pages/userMange/userManage.wxss */

.sub-menu .van-grid-item__content{
  background-color:  #d4d4d4;
}

.sub-menu-icon {
  width: 80rpx;
  height:80rpx;
}
.sub-menu-span{
  color: #646566;
  font-size: 25rpx;
  text-align: center;
}

.card-container{
  background-color:  #f5f7f9;
  margin:0 auto;
  padding: 100rpx 0 100rpx 0;
}

.card-info{
  margin:0 auto;
  width:600rpx;
  height:360rpx;
  border-radius: 50rpx;
  box-shadow:20rpx 20rpx 20rpx 20rpx #d7dde4 ; 
  padding: 30rpx
}

.patient-name{
  font-size:40rpx;
}

.patient-gender {
  vertical-align: text-bottom;
  font-size:30rpx;
  position: relative;
  top:10rpx;
}
.patient-row {
  display: block;
  margin-bottom: 20rpx;
}

.head {
	display: flex;
	justify-content: center;
	flex-direction: column;
	align-items: center;
	overflow: hidden;
	position: relative;
}

.head .userAvatar {
	overflow: hidden;
	width: 160rpx;
	height: 160rpx;
	margin: 20rpx;
	border-radius: 50%;
	border: 2px solid #fff;
	box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
	z-index: 99;
}

.head .userNickName {
	color: black;
	margin-bottom: 20rpx;
	font-size: 38rpx;
	font-weight: 600;
	z-index: 99;
}

.head .userButton {
	margin-bottom: 20rpx;
	background-color: rgb(0, 214, 107);
	color: rgb(255, 255, 255);
	border-radius: 98rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	z-index: 99;
}
